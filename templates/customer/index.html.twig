{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="mb-3" style="text-align: right;">
            {{ app.user.username }} <a class="btn btn-danger" href="{{ path('app_logout') }}">Salir</a>
        </div>
    {% endif %}

    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.fullname }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.password }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
